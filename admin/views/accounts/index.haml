%ul.nav.nav-tabs
  %li.active=link_to tag_icon(:list, :list), url(:accounts, :index)
  %li=link_to tag_icon(:plus, :new), url(:accounts, :new), :id => 'new'

.tabs-content
  %table#multiple_list.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th.header
          .dropdown
            %a#cogs.dropdown-toggle.btn.btn-mini.btn-link(href='#' data-toggle='dropdown')
              = tag_icon :cogs
              %b.caret
            %ul.dropdown-menu
              %li= link_to tag_icon(:check,'Select All'), '#', :id => 'check_all'
              %li= link_to tag_icon('check-empty','Unselect All'), '#', :id => 'uncheck_all'
              %li
                .hide
                  - form_for :account,  url(:accounts, :delete_multiple), :method => :delete, :id => 'multiple_delete_form' do |f|
                    %button#multiple_delete_button.to_submit.btn.btn-danger.pull-left{:type => 'submit'}= tag_icon(:trash,"Delete Checked")
                    %h5 Are you sure to delete the select?
                  =link_to tag_icon(:trash, 'Delete Checked'),'#', 'data-form' =>'#multiple_delete_form', 'data-cancel' => 'Cancel','data-title' => 'Warning: Multiple delete !', 'data-type' => 'danger', :id => 'btn_multiple_delete'
        %th.header= :id
        %th.header= :name
        %th.header= :surname
        %th.header= :email
        %th.header.action Action

    %tbody
      -@accounts.each do |account|
        %tr
          %td= check_box_tag 'account_ids[]', :value => account.id
          %td=account.id
          %td=account.name
          %td=account.surname
          %td=account.email
          %td.action
            =button_to(:edit, url(:accounts, :edit, :id => account.id),:method => :get, :class => 'pull-left' ){ link_to tag_icon(:edit, 'Edit') , :class =>'btn btn-mini btn-link to_submit Edit' }
            =button_to(:delete, url(:accounts, :destroy, :id => account.id),:method => :delete, :class => "hide #{:accounts}-#{:destroy}-#{account.id}") { submit_tag :delete, :class =>'btn btn-danger pull-left' }
            =link_to tag_icon(:trash, 'Delete'), :class =>'btn_delete btn btn-link btn-mini pull-right', 'data-form' => ".#{:accounts}-#{:destroy}-#{account.id}", 'data-title'=>'Are you sure?', 'data-cancel' => 'Cancel', 'data-type' => 'warning'