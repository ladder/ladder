.actions
  =f.submit 'Save', :class => 'btn btn-primary'
  &nbsp;
  =f.submit 'Save and continue', :class => 'btn btn-info', :name => 'save_and_continue'
  &nbsp;
  =f.submit 'Cancel', :onclick => "window.location='#{url(:accounts, :index)}';return false", :class => 'btn'
