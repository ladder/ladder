- @title = @agent.heading_ancestors.join(' -- ')

.row-fluid
  .span9
    %h2.page-header= @title

    .row-fluid
      .span2{:style => 'text-align:center;'}
        .thumbnail{:style => 'min-height: 80px; margin-bottom: 10px;'}
          = partial 'image', :object => @agent, :locals => {:style => 'font-size: 6em; line-height:125%;'}

      .span10
        = partial 'item', :object => @agent

    - unless @results.empty?
      .row-fluid
        %b= @results.total
        =I18n.t("search.results")
        %span.muted (#{@results.time} ms)

        = partial 'search/result', :collection => @results
        .pagination-centered
          = paginate @results, :window => 3

  .span3
    - unless @agent.leaf? and @agent.root?
      .well.sidebar-nav
        %ul.nav.nav-list
          %li.nav-header= I18n.t('model.related')
          = partial 'tree', :collection => @agent.root.to_a, :locals => {:reference => @agent, :stem => true, :show => :last}

    - unless @agent.similar.empty?
      .well.sidebar-nav
        %ul.nav.nav-list
          = partial 'similar', :locals => {:document => @agent, :show => [:join, ' -- ']}

    - unless @results.empty? or (1 == @results.size and @filters.empty?)
      .well.sidebar-nav
        %ul.nav.nav-list
          - unless @results.facets.empty?
            = partial 'search/facet', :collection => @results.facets