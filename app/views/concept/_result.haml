%a{:href => url_for(:concept, :index, :id => result.id)}
  %h4
    = result.heading.last.truncate(100, :separator => ' ')
-#    %small (#{result._score})

- item = Concept.normalize(result.to_hash, {:ids => :resolve})

- desc = []
- desc.push item[:skos][:prefLabel].dashjoin rescue nil unless 1 == item[:skos][:prefLabel].size

- if result.resource_ids.size > 3
  - desc.push "#{result.resource_ids.size} #{I18n.t('search.resources')}" rescue nil

.description.pull-left #{desc.join('; ')}

.row-fluid
- Resource.find(result.resource_ids.take(3)).each do |resource|
  %a.thumbnail.pull-right{:href => url_for(:resource, :index, :id => resource.id), :style => 'margin-left: 9px;'}
    .half.half-small
      = partial 'resource/image', :object => resource, :locals => {:size => 'S'}