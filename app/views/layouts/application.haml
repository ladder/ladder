!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= @title
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %meta{:name => "viewport", :content => "width=device-width"}/
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    = stylesheet_link_tag 'bootstrap.min.css', 'bootstrap-responsive.min.css', 'main.css', 'github.css'
    :css
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }
    = javascript_include_tag 'jquery.js', 'bootstrap.min.js', 'highlight.pack.js'
    <script>hljs.initHighlightingOnLoad();</script>
  %body
    %header
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand{:href => "/"} Ladder
            .nav-collapse
              %ul.nav
                %li.active
                  %a{:href => "#"} Home
                %li
                  %a{:href => "http://www.deliberatedata.com"} Contact
              - form_tag '/search', :method => 'get', :class => 'navbar-search' do
                = text_field_tag :q, :class => 'input-xxlarge search-query', :placeholder => 'Search', :value => @querystring
              -#
                %p.navbar-text.pull-right
                  Logged in as
                  %a{:href => "#"} username
    #main.container= yield
    %footer
