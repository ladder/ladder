- @title = "Resource #{@resource.id}"
= partial 'resource/header'

#header
  %h1 Resource #{@resource.id}

#resource
  %table{:border => "1", :style => "table-layout:fixed; width:100%; word-wrap:break-word;"}
    %tr
      %td{:valign => "top", :class => "json"}
        <pre><code>
        = JSON.generate(MARC::Record.new_from_marc(@resource.marc).to_hash, :object_nl => "\n") if @resource.marc
        </code></pre>
      %td{:valign => "top", :class => "xml"}
        <pre><code>
        &= @resource.mods if @resource.mods
        </pre></code>
      %td{:valign => "top", :class => "json"}
        <pre><code>
        = JSON.generate(@resource.as_document.as_json(:except => ['marc', 'mods']), :object_nl => "\n")
        </code></pre>